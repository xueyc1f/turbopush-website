{
  "name": "TurboPush - 多平台内容发布管理工具",
  "short_name": "TurboPush",
  "description": "强大的多平台内容发布和管理工具，支持多个社交媒体平台，提供定时发布、内容管理、数据分析等功能。",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2563eb",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "zh-CN",
  "dir": "ltr",
  "categories": ["productivity", "social", "utilities"],
  "icons": [
    {
      "src": "/favicon.ico",
      "sizes": "16x16 32x32",
      "type": "image/x-icon"
    },
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "TurboPush 桌面版主界面"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "TurboPush 移动版界面"
    }
  ],
  "shortcuts": [
    {
      "name": "功能介绍",
      "short_name": "功能",
      "description": "查看 TurboPush 的所有功能",
      "url": "/features",
      "icons": [
        {
          "src": "/favicon.ico",
          "sizes": "32x32"
        }
      ]
    },
    {
      "name": "立即下载",
      "short_name": "下载",
      "description": "下载 TurboPush 应用程序",
      "url": "/download",
      "icons": [
        {
          "src": "/favicon.ico",
          "sizes": "32x32"
        }
      ]
    },
    {
      "name": "联系我们",
      "short_name": "联系",
      "description": "联系 TurboPush 团队",
      "url": "/contact",
      "icons": [
        {
          "src": "/favicon.ico",
          "sizes": "32x32"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "windows",
      "url": "https://turbopush.com/download/windows"
    },
    {
      "platform": "macos",
      "url": "https://turbopush.com/download/macos"
    },
    {
      "platform": "linux",
      "url": "https://turbopush.com/download/linux"
    }
  ],
  "prefer_related_applications": true,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+turbopush",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/plain": [".txt"],
        "text/markdown": [".md"]
      }
    }
  ],
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "handle_links": "preferred",
  "capture_links": "new-client"
}